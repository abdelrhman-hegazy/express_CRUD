<%-include('layout/header.ejs')%>
<body class="bg-light">
  <div class="container mt-5">
    <h2 class="text-center bg-success text-light p-3">
      Edit User(<% user.name %>)
    </h2>
    <form
      action="/update/<%= user._id %>"
      method="POST"
      enctype="multipart/form-data"
      class="p-4 border rounded bg-white shadow"
    >
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          placeholder="Enter name"
          value="<%= user.name %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="Enter email"
          value="<%= user.email %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input
          type="text"
          class="form-control"
          id="phone"
          name="phone"
          placeholder="Enter phone"
          value="<%= user.phone %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Select Image</label>
        <input
          type="file"
          class="form-control form-control-lg"
          id="image"
          name="image"
        />
        <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1" />
      </div>
      <input type="hidden" name="old_image" value="<%= user.image %>" />
      <div class="mb-3 d-grid">
        <button type="submit" class="btn btn-success w-100">Update User</button>
      </div>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
<%-include('layout/footer.ejs')%>
